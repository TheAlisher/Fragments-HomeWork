<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".LaunchButtonsFragment">

    <ImageView
        android:id="@+id/enter_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/enter_icon"
        android:layout_marginBottom="10dp"
        app:layout_constraintRight_toLeftOf="@+id/show_calculator"
        app:layout_constraintBottom_toTopOf="@+id/show_result_history"/>

    <ImageView
        android:id="@+id/horizontal_line_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/horizontal_line_icon"
        app:layout_constraintTop_toTopOf="@id/show_calculator"
        app:layout_constraintBottom_toBottomOf="@+id/show_result_history"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageView
        android:id="@+id/history_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/history_icon"
        android:layout_marginBottom="8dp"
        app:layout_constraintRight_toLeftOf="@+id/show_result_history"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <Button
        android:id="@+id/show_calculator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@color/Indigo"
        android:text="Calculator"
        android:textColor="@color/Aquamarine"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@id/show_result_history"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <Button
        android:id="@+id/show_result_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@color/Indigo"
        android:text="Show History"
        android:textColor="@color/Aquamarine"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>